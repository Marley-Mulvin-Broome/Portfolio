// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id       Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  title    String
  description String
  content  String
  image    String
  slug   String   @unique
  published Boolean  @default(false)
  tags  String[]

  @@map("Blogs")
}